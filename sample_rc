# install as ~/.config/ldaps/rc
LDAP_SERVER=ldap.mydomain.com
LDAP_BASE_DN=DC=my,DC=domain,DC=com
LDAP_BIND_DN=serviceaccount@my.domain.com
LDAP_BIND_PW=mypassword

# page 500 results at a time, fetch additional pages without prompting
LDAP_PAGING="-E pr=500/noprompt"

# any additional ldapsearch flags/args to include
LDAP_MY_ARGS=
